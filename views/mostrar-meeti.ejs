                            <input type="button" value="Eliminar" class='btn btn-azul'>
                        </div>
                    
                </div>
          
            <!--Formulario comentarios-->
            <form action="" class="default-form comentarios">
                <legend>Agrega un Comentario</legend>
                <div class="campo">
                    <label for="">Comentario</label>
                    <textarea name="comentario"></textarea>
                </div>
                <div class="campo enviar">
                    <input type="submit" value="enviar" class="btn btn-rosa">
                </div>
            </form>
               <!--Formulario comentarios-->
            </div><!--Comentarios-->
        </div><!--Informacion event-->
        <aside class="informacion">
            <div class="fecha">
                <% moment.locale('es')%> 
                <% const fecha = meeti.fecha +' '+ meeti.hora;  %> 
                <p><%= moment(fecha).format('LLLL')  %> Horas</p>
            </div>
        <div class="ubicacion"><p><%= meeti.direccion %>, <%= meeti.ciudad %> , <%= meeti.estado %>, <%= meeti.pais %>    </p>
        </div>
        <input type="hidden" id='lat'value="<%= meeti.ubicacion.coordinates[0] %> ">
